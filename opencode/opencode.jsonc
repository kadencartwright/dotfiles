{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "todoist": {
      "type": "remote",
      "url": "https://ai.todoist.net/mcp",
      "enabled": true,
    },
    "playwright": {
      "type": "local",
      "command": [
        "bun",
        "x",
        "@playwright/mcp@latest"
      ],
      "enabled": true
    },
    "atlassian": {
      "type": "remote",
      "url": "https://mcp.atlassian.com/v1/mcp",
      "enabled": true
    },
    "figma": {
      "type": "remote",
      "url": "https://mcp.figma.com/mcp",
      "enabled": true,
      "oauth": {}
    },
    "posthog": {
      "type": "remote",
      "url": "https://mcp.posthog.com/mcp",
      "enabled": true,
      "oauth": false,
      "headers": {
        "Authorization": "Bearer {file:~/.secrets/posthog-key-opencode.production}"
      }
    }
  },
  "tools": {
    "atlassian_*": false,
    "posthog_*": false,
    "playwright_*": false,
    "todoist_*": false,
    "figma_*": false,
    "clickhouse": false
  },
  "agent": {
    "build": {
      "mode": "primary",
      "permission": {
        "task": {
          "*": "allow",
          "pr-review": "deny"
        },
        "bash": {
          "*": "allow",
          "git *": "allow",
          "git commit *": "deny",
          "git push *": "deny"
        }
      }
    },
    "plan": {
      "mode": "primary",
      "prompt": "{file:./prompts/plan.md}"
    },
    "atlassian-agent": {
      "tools": {
        "atlassian_*": true,
        "posthog_*": false
      }
    },
    "posthog-agent": {
      "tools": {
        "posthog_*": true,
        "atlassian_*": false
      }
    }
  }
}
